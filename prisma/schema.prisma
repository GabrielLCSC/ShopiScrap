// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// NextAuth Models
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  scrapeJobs    ScrapeJob[]
  
  // Système de crédits et abonnements
  credits       Int       @default(3) // Crédits disponibles (free tier ou day pass)
  lastFreeReset DateTime  @default(now()) // Dernière réinitialisation des crédits gratuits
  totalCreditsUsed Int    @default(0) // Statistique totale
  
  // Abonnements
  subscriptionType String @default("free") // "free" | "day_pass" | "monthly" | "pro"
  subscriptionEndDate DateTime? // Fin de l'abonnement (day pass ou mensuel)
  stripeCustomerId String? // ID client Stripe
  stripeSubscriptionId String? // ID abonnement Stripe (pour monthly/pro)
  
  // Pour plan Monthly (200/mois)
  monthlyQuota Int @default(200) // Quota mensuel
  monthlyUsed Int @default(0) // Utilisé ce mois
  lastMonthlyReset DateTime @default(now()) // Dernier reset mensuel
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// ============================================
// URL Scraper Models - Shopify Products
// ============================================

model ScrapeJob {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  url         String
  status      String   @default("pending") // pending, processing, completed, failed
  
  // Données scrapées
  productData ScrapedProduct?
  
  // Métriques
  startedAt   DateTime?
  completedAt DateTime?
  duration    Int?      // en millisecondes
  error       String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model ScrapedProduct {
  id          String   @id @default(cuid())
  scrapeJobId String   @unique
  scrapeJob   ScrapeJob @relation(fields: [scrapeJobId], references: [id], onDelete: Cascade)
  
  // URL et identifiants
  url         String
  shopifyDomain String?
  productHandle String?
  
  // Informations produit de base
  title       String
  description String?
  vendor      String?
  productType String?
  
  // Prix
  price       Float?
  compareAtPrice Float?
  currency    String?
  
  // Disponibilité
  available   Boolean  @default(false)
  
  // Images
  mainImage   String?
  images      String?  // JSON array des URLs d'images
  
  // Variants
  variants    String?  // JSON array des variants
  variantCount Int?
  
  // SEO
  metaTitle       String?
  metaDescription String?
  
  // Tags et collections
  tags        String?  // JSON array
  collections String?  // JSON array
  
  // Données brutes (pour flexibilité future)
  rawData     String?  // JSON complet du produit Shopify
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([shopifyDomain])
  @@index([productHandle])
}
